{
  "uid": "thesis-app",
  "title": "Thesis App — Overview",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "tags": ["thesis-app", "flask", "k8s"],
  "refresh": "10s",
  "style": "dark",
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "DS_PROMETHEUS",
        "label": "Prometheus",
        "query": "prometheus",
        "current": { "selected": true }
      },
      {
        "type": "query",
        "name": "pod",
        "label": "Pod",
        "datasource": "$DS_PROMETHEUS",
        "query": "label_values(kube_pod_info{namespace=\"default\", pod=~\"thesis-app.*\"}, pod)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": "$__all" }
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Uptime targets (thesis-app)",
      "datasource": "$DS_PROMETHEUS",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "up{namespace=\"default\", service=\"thesis-app\"}",
          "legendFormat": "UP pods"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Requests per second",
      "datasource": "$DS_PROMETHEUS",
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
      "targets": [
        {
          "expr": "sum by (method, status) (rate(flask_http_request_total[1m]))",
          "legendFormat": "{{method}} {{status}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p95 / p99 (s)",
      "datasource": "$DS_PROMETHEUS",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(flask_http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(flask_http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "CPU — pod (cores)",
      "datasource": "$DS_PROMETHEUS",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{namespace=\"default\", pod=~\"thesis-app.*\"}[2m]))",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory — pod (bytes)",
      "datasource": "$DS_PROMETHEUS",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum by (pod) (container_memory_working_set_bytes{namespace=\"default\", pod=~\"thesis-app.*\"})",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "/slow — calls (5m increase)",
      "datasource": "$DS_PROMETHEUS",
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "increase(slow_requests_total[5m])",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "/cpu — jobs (5m increase)",
      "datasource": "$DS_PROMETHEUS",
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "increase(cpu_jobs_total[5m])",
          "legendFormat": "cpu_jobs_total"
        }
      ]
    },
    {
      "type": "bargauge",
      "title": "HTTP status mix (1m)",
      "datasource": "$DS_PROMETHEUS",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum by (status) (rate(flask_http_request_total[1m]))",
          "legendFormat": "{{status}}"
        }
      ]
    }
  ]
}
